<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox prefHeight="525.0" prefWidth="622.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.controller.information.FlightDatePanelController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label fx:id="dateLabel" styleClass="headingLabel"/>
    <ListView fx:id="flightListView" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0"/>
        </VBox.margin>
    </ListView>
    <Label fx:id="errorLabel" textFill="RED" wrapText="true"/>
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back"/>
            <Button fx:id="reserveButton" mnemonicParsing="false" onAction="#onReserveButtonClicked" text="Reserve"/>
        </buttons>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </ButtonBar>
</VBox>